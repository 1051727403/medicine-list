@import "ripples.wxss";
.nav_top {
  position: fixed;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  z-index: 999;
  background: linear-gradient(#CAE5FF,30%,white);
}

.nav_top_name {
  color:#2F81FF;
  margin-left:5%;
  font-size: 36rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  letter-spacing: 4rpx;
}

.empty_nav_top {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ffffff;
}
.back_icon{
  width: 48rpx;
  height: 48rpx;
  margin-top: 5rpx;
}