Page{
  background: linear-gradient(#f8f8ff,5%,#fafafc);
}
.prompt{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  color:rgb(172, 172, 172);
  font-size: 36rpx;
}
.medicines{
  width: 100%;
  padding-top: 30rpx;
}
.movebar{
  width:calc(100% + 25%);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.single_medicine{
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  margin-top: 30rpx;
  width:90%;
  border-radius: 30rpx;
  box-shadow: -2rpx 8rpx 26rpx #f2f3f7,2rpx -4rpx 16rpx #f2f3f7;
  display: flex;
  flex-direction: row;
}
.del_medicine{
  margin-top: 30rpx;
  margin-right: 4%;
  width: 20%;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: red;
  font-size: 28rpx;
}
.medicine_photo{
  margin:0 5% 3% 4%;
  border-radius: 30rpx;
}
.right_part{
  width:50%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.detail_name{
  font-size: 36rpx;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.detail_brand,.detail_specification,.detail_number{
  margin-top: 15rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color:#C3C3C3;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.number_line{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.change_number{
  margin-top: 5rpx;
  margin-right: 15rpx;
  width: 200rpx;
  display: flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items: center;
}
.minus,.add{
  width: 38rpx;
  height: 38rpx;
}
.number{
  font-size: 36rpx;
  margin-right: 20rpx;
}
.addMedicine{
  background-color: #fafafc;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 19%;
  border-radius: 30rpx;
}
.add_custom{
  background-color: #fafafc;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 28%;
  border-radius: 30rpx;
}
.add_scan{
  background-color: #fafafc;
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 37%;
  border-radius: 30rpx;
}
.cover{
  background-color: #bdc0c4;
  opacity: 0.5;
}
.addMedicine_custom{
  width: 86%;
  height:34%;
  margin-left: 8%;
  margin-right: 8%;
  background-color: white;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.addMedicine_custom_title{
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.addMedicine_custom_name,.addMedicine_custom_brand,.addMedicine_custom_specification{
  width: 84%;
  margin-left: 8%;
  margin-right: 8%;
  margin-top: 10rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 34rpx;
  letter-spacing: 2rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.placeholder{
  font-size: 34rpx;
  color: #cfcfcf;
}
.check{
  width: 100%;
  display: flex;
  height: 80rpx;
  padding-top: 20rpx;
  border-top:  1rpx solid #f5f5f5;
}
.add_cancle,.add_confirm{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 50%;
  height: 100%;
  font-size: 38rpx;
}
.empty_bottom_bar{
  width:100%;
  height: 110rpx;
  bottom: 0rpx;
  margin-top: 40rpx;
}
.bottom_bar{
  background-color: rgb(255, 255, 255);
  box-shadow: 0rpx -2rpx 8rpx rgb(241, 241, 241);
  width:100%;
  height: 110rpx;
  font-size: 42rpx;
  position:fixed;
  bottom: 0rpx;
  display: flex;
  justify-content: space-around;
  flex-direction:row ;
  align-items: center;
}
.share{
  display: flex;
  justify-content: space-around;
  align-items: center;
  color:#1ACB26;
  border-right:2rpx solid rgb(218, 217, 217) ;
  width: inherit;
}
.submit{
  color:#FF7344;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: inherit;
}




/*动画样式*/

@-webkit-keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translate3d(-100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}
.fadeInLeft {
  animation-name: fadeInLeft;
  animation-duration: 0.5s;
	animation-fill-mode: both;
}
@-webkit-keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translate3d(100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInRight {
  animation-name: fadeInRight;
  animation-duration: 0.5s;
	animation-fill-mode: both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
  animation-duration: 1s;
	animation-fill-mode: both;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInDown {
  animation-name: fadeInDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
@keyframes fadeOutDown {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
}

.fadeOutDown {
  animation-name: fadeOutDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
