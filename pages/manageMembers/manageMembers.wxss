page {
  background-color: #f6fbff;
}
.member_list{
  width: 90%;
  margin:20rpx 5%;
  background-color: white;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 30rpx;
  box-shadow:4rpx 4rpx 8rpx #e6e5e5;
}
.content{
  margin:5%;
  width: 90%;
  height: 90%;
}
.member_list_name{
  font-size: 32rpx;
  font-family:Arial, Helvetica, sans-serif;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.members_phone_number{
  width: 80%;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #a1a1a1;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.bottom_part{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.permission{
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 25rpx;
  box-shadow:2rpx 2rpx 2rpx #ebebeb;
}
.cover{
  background-color: #bdc0c4;
  opacity: 0.5;
}
.choosePermission{
  width: 86%;
  height:30%;
  margin-left: 8%;
  margin-right: 8%;
  border-radius: 50rpx;  
  display: flex;
  justify-content: space-between;
  align-items:center;
  flex-direction:column;
  letter-spacing: 2rpx;
}
.set_administrator,.kickOut,.cancel{
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  width: 100%;
  height: 20%;
  border-radius:30rpx;
  background-color: white;
  box-shadow: 4rpx 4rpx 16rpx white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  text-align: center;
}
/*动画样式*/

@-webkit-keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translate3d(-100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}
.fadeInLeft {
  animation-name: fadeInLeft;
  animation-duration: 1s;
	animation-fill-mode: both;
}
@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translate3d(100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInRight {
  animation-name: fadeInRight;
  animation-duration: 1s;
	animation-fill-mode: both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
  animation-duration: 1s;
	animation-fill-mode: both;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInDown {
  animation-name: fadeInDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
@keyframes fadeOutDown {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
}

.fadeOutDown {
  animation-name: fadeOutDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
