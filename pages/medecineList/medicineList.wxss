Page{
  background: linear-gradient(#f8f8ff,5%,#fafafc);
}
.medicines{
  width: 100%;
}
.single_medicine{
  background-color: white;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 30rpx;
  width: 90%;
  border-radius: 30rpx;
  box-shadow: -2rpx 8rpx 26rpx #f2f3f7,2rpx -4rpx 16rpx #f2f3f7;
  display: flex;
  flex-direction: row;
}
.medicine_photo{
  margin:3%;
  height: 84%;
  border-radius: 30rpx;
}
.right_part{
  width:50%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.detail_name{
  font-size: 36rpx;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.detail_brand,.detail_specification,.detail_number{
  margin-top: 15rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color:#C3C3C3;
}
.number_line{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.minus,.add{
  width: 38rpx;
  height: 38rpx;
}
.change_number{
  width: 140rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
}
.number{
  font-size: 38rpx;
}
.addMedicine{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 19%;
}
.add_custom{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 28%;
}
.add_scan{
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  z-index: 997;
  right:5%; 
  bottom: 37%;
}

.bottom_bar{
  background-color: rgb(255, 255, 255);
  box-shadow: 0rpx -2rpx 8rpx rgb(241, 241, 241);
  width:100%;
  height: 110rpx;
  font-size: 42rpx;
  position:absolute;
  bottom: 0rpx;
  display: flex;
  justify-content: space-around;
  flex-direction:row ;
  align-items: center;
}
.share{
  display: flex;
  justify-content: space-around;
  align-items: center;
  color:#1ACB26;
  border-right:2rpx solid rgb(218, 217, 217) ;
  width: inherit;
}
.submit{
  color:#FF7344;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: inherit;
}




/*动画样式*/

@-webkit-keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translate3d(-100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}
.fadeInLeft {
  animation-name: fadeInLeft;
  animation-duration: 1s;
	animation-fill-mode: both;
}
@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translate3d(100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInRight {
  animation-name: fadeInRight;
  animation-duration: 1s;
	animation-fill-mode: both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
  animation-duration: 1s;
	animation-fill-mode: both;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInDown {
  animation-name: fadeInDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
@keyframes fadeOutDown {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
}

.fadeOutDown {
  animation-name: fadeOutDown;
  animation-duration: 1s;
	animation-fill-mode: both;
}
